.modal-dialog
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", type: "button"} Ã—
      %h3= t('.new_location')
    -locat =  Location.new
    = form_for(locat, remote: true, format: :json ) do |c|
      = errors_for(locat).html_safe
      .modal-body
        .input
          = c.label :city
          = c.text_field :city, class: "pretty-input"
        .input
          = c.label :state
          = c.text_field :state, class: "pretty-input"
        .input
          = c.label :countri
          = c.text_field :countri, class: "pretty-input"
      .modal-footer
        = c.submit t('.save'), class: "btn-modal-submit"
