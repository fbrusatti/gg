#banks
  .sub-header
    -if edit_or_new_page?(@bank)
      %a.bank-save
        %i.icon-save.icon-2x
        = t('.save')
      %a.bank-danger{href: "#{banks_path}"}
        %i.icon-remove-sign.icon-2x
        = t('.cancel')
    -elsif show_page?(@bank)
      %a.bank-new{ href: "#{edit_bank_path(@bank)}" }
        %i.icon-edit.icon-2x
        = "editar"
    -else
      %a.bank-new{ href: "#{new_bank_path}" }
        %i.icon-plus-sign.icon-2x
        = t('.new')
      %a.bank-print{href: "#"}
        %i.icon-print.icon-2x
        = t('.print')
