.form-signin
  %h2.form-signin-heading= I18n.t("devise.sessions.new.heading")
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = f.email_field :email, autofocus: true,
                            class: "form-control",
                            placeholder: I18n.t("devise.sessions.new.email")
    = f.password_field :password,
                       class: "form-control",
                       placeholder: I18n.t("devise.sessions.new.password")
    - if devise_mapping.rememberable?
      .checkbox
        = f.check_box :remember_me
        = f.label :remember_me
    = f.submit I18n.t("devise.sessions.new.sign_in"),
               class: "form-signin-button"
