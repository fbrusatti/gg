.modal-dialog
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", type: "button"} Ã—
      %h3= t('.new_category')
    = form_for(Category.new, remote: true, format: :json ) do |c|
      .modal-body
        .input
          = c.label :name
          = c.text_field :name, class: "pretty-input"
        .input
          = c.label t('.referrer_id')
          = c.select :referrer_id ,
                     category_meth,
                     {:include_blank => ''},
                     class: "pretty-input"
      .modal-footer
        = c.submit t('.save'), class: "btn-modal-submit"
