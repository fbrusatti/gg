.modal-dialog#new_category_modal
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", type: "button"} Ã—
      %h3
        = t('.new_category')
    .modal-body
    = form_for(Category.new, remote: true) do |c|
      .input
        = c.label t('.name')
        = c.text_field :name, class: "pretty-input"
      .input
        = c.label t('.referrer_id')
        = c.select :referrer_id , category_meth, {}, class: "pretty-input"
      = c.submit hidden: true, id: "submit_cat"
    .modal-footer
      %a.save-category
        = t('.save')