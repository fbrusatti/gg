.sub-header
  -if edit_or_new_page?(@product)
    %a.product-save
      %i.icon-save.icon-2x
      = t('.save')
    %a.product-danger{href: "#{products_path}"}
      %i.icon-remove-sign.icon-2x
      = t('.cancel')
  -elsif show_page?(@product)
    %a.product-new{ href: "#{edit_product_path(@product)}" }
      %i.icon-edit.icon-2x
      = "editar"
  -else
    %a.product-new{ href: "#{new_product_path}" }
      %i.icon-plus-sign.icon-2x
      = t('.new')
    %a.product-print{href: "#"}
      %i.icon-print.icon-2x
      = t('.print')
      