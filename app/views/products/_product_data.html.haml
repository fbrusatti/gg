.data-product
  .left
    .title= t('.product_data')
    .input
      = f.label :code
      = f.text_field :code, class: "pretty-input"
    .input
      = f.label :description
      = f.text_field :description, class: "pretty-input"
    .input
      = f.label :stock
      = f.text_field :stock, class: "pretty-input"
    .input
      = f.label :minimun_stock
      = f.text_field :minimun_stock, class: "pretty-input"
    .input
      = f.label :gondola
      = f.text_field :gondola , class: "pretty-input"
    .input
      = f.label :shelf
      = f.text_field :shelf , class: "pretty-input"
    .input
      = f.label :category
      = f.collection_select :category_ids,
                            Category.all,
                            :id, :name,
                            {}, class: "pretty-input",
                            id: "category_select"
      %a#openBtn-category
        %i.icon-plus-sign.icon-1x
  .right
    .title= t('.comercial_data')
    .input
      = f.label :money
      = f.collection_select :money_id,
                            Money.all,
                            :id, :complete_name,
                            {}, class: "pretty-input"
    .input
      = f.label :cost_price
      = f.text_field :cost_price, class: "pretty-input"
    .input
      = f.label :list_price_one
      = f.text_field :list_price_one , class: "pretty-input"
    .input
      = f.label :list_price_two
      = f.text_field :list_price_two , class: "pretty-input"
    .input
      = f.label :vat
      = f.collection_select :vat_id,
                            Vat.all,
                            :id, :percentaje,
                            {}, class: "pretty-input", id: "vat_select"
      %a#openBtn-vat
        %i.icon-plus-sign.icon-1x
