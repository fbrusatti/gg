#checks
  .sub-header
    -if edit_or_new_page?(@check)
      %a.check-save
        %i.icon-save.icon-2x
        = t('.save')
      %a.check-danger{href: "#{checks_path}"}
        %i.icon-remove-sign.icon-2x
        = t('.cancel')
    -elsif show_page?(@check)
      %a.check-new{ href: "#{edit_check_path(@check)}" }
        %i.icon-edit.icon-2x
        = "editar"
    -else
      %a.check-new{ href: "#{new_check_path}" }
        %i.icon-plus-sign.icon-2x
        = t('.new')
      %a.check-print{href: "#"}
        %i.icon-print.icon-2x
        = t('.print')
